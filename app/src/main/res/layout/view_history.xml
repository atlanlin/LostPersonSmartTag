<?xml version="1.0" encoding="utf-8"?>
<!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >
    <LinearLayout
        android:id="@+id/history_frag_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wallet_bright_foreground_disabled_holo_light"
        android:focusable="true"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Ward Name"
            android:focusable="false"
            style="@style/MySmallLabelFont"
            />
        <EditText
            android:id="@+id/etWardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            style="@style/MySmallTextFont" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finder Name"
            style="@style/MySmallLabelFont"
            />
        <EditText
            android:id="@+id/etHName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            style="@style/MySmallTextFont"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finder Location"
            style="@style/MySmallLabelFont"
            />

        <EditText
            android:id="@+id/etHCurrentLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            style="@style/MySmallTextFont" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            style="@style/MySmallLabelFont"
            />
        <EditText
            android:id="@+id/etHTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            style="@style/MySmallTextFont" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            style="@style/MySmallLabelFont"
            />
        <EditText
            android:id="@+id/etHDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            style="@style/MySmallTextFont" />
        <LinearLayout
            android:id="@+id/llguardianEventInfo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wallet_highlighted_text_holo_light"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardian Message"
                style="@style/MySmallInverseLabelFont"
                />
            <EditText
                android:id="@+id/etGDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter an description"
                style="@style/MySmallInverseTextFont"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Address"
                style="@style/MySmallInverseLabelFont"
                />
            <EditText
                android:id="@+id/etGAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your current address"
                style="@style/MySmallInverseTextFont"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnApprove"
                    android:text="Approve"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btnReject"
                    android:text="Reject"
                    />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tvApproval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>